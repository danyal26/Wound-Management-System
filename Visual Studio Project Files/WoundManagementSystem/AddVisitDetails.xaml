<Page
    x:Class="WoundManagementSystem.AddVisitDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WoundManagementSystem"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:WoundManagementSystem"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="FlyoutPresenter">
            <Setter Property="Background" Value="Green"/>
        </Style>
    </Page.Resources>

    <Grid>

        <!-- ************************************ MAIN ******************************************** -->

        <SplitView x:Name="MainSplitView">
            <SplitView.Pane>
                <RelativePanel Background="White" BorderBrush="#999999" BorderThickness="0,0,1,0">

                    <Button x:Name="BtnCloseNav" Click="BtnToggleNav_Click" Height="45" Width="45" FontSize="22"
                        RelativePanel.AlignRightWithPanel="True" Template="{StaticResource WhiteButtonTemplate}">
                        <SymbolIcon Symbol="Cancel"/>
                    </Button>
                </RelativePanel>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>

                    <Image Source="{StaticResource NavigationBackground}"
                   Opacity="0.7"
                   Stretch="UniformToFill"/>

                    <RelativePanel>

                        <!-- TITLE -->
                        <Grid x:Name="GridTitleVisits"
                              RelativePanel.AlignRightWithPanel="True"
                              RelativePanel.AlignLeftWithPanel="True"
                              RelativePanel.AlignTopWithPanel="True"
                              Margin="10,10,10,10" Background="White">

                            <Button x:Name="BtnCancel" HorizontalAlignment="Right" Margin="10"
                                Height="45" Width="45" FontSize="22" Click="BtnCancel_Click"
                                Template="{StaticResource WhiteButtonTemplate}">
                                <SymbolIcon Symbol="Cancel"/>
                            </Button>

                            <Button x:Name="BtnOpenNav" Visibility="Collapsed"
                                    HorizontalAlignment="Left" Margin="10"
                                Height="45" Width="45" FontSize="22" Click="BtnToggleNav_Click"
                                Template="{StaticResource WhiteButtonTemplate}">
                                <SymbolIcon Symbol="AllApps"/>
                            </Button>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image x:Name="IconAppts" Source="{StaticResource IconAppointments}" 
                           Width="30" Height="30"/>
                                <TextBlock Style="{StaticResource Title}">
                        Add Visit Details</TextBlock>
                            </StackPanel>

                        </Grid>

                        <!-- MAIN -->

                        <Grid RelativePanel.Below="GridTitleVisits"
                              RelativePanel.AlignRightWithPanel="True"
                              RelativePanel.AlignLeftWithPanel="True"
                              RelativePanel.AlignBottomWithPanel="True">


                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <!-- CHOOSE MEDICATION -->
                            <RelativePanel x:Name="PanelMedList" Background="White" Grid.Column="0" 
                                   Margin="10,0,0,10" Visibility="Collapsed">

                                <TextBlock x:Name="LblMedListTitle" Style="{StaticResource 22Gray}"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                           Margin="10" RelativePanel.AlignTopWithPanel="True">
                                Medication
                                </TextBlock>

                                <Button x:Name="BtnCancelMedList" Click="BtnCancelMedList_Click" Margin="10"
                                                            Tag="{x:Bind fileName}" RelativePanel.AlignRightWithPanel="True"
                                                            Template="{StaticResource WhiteButtonTemplate}">
                                    <SymbolIcon Symbol="Cancel"/>
                                </Button>

                                <!-- separator -->
                                <Rectangle x:Name="DividerMedsList" Height="1" RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.Below="LblMedListTitle"
                                       RelativePanel.AlignRightWithPanel="True"
                                       Fill="{StaticResource AppBlueDarker}"
                                       Margin="40,0"/>

                                <ListView x:Name="ListAddMed" IsItemClickEnabled="True" 
                                  ItemClick="ListAddMed_ItemClick"
                                  RelativePanel.AlignRightWithPanel="True"
                                  RelativePanel.AlignLeftWithPanel="True"
                                  RelativePanel.AlignBottomWithPanel="True"
                                  RelativePanel.Below="DividerMedsList"
                                  ItemsSource="{x:Bind Path=medList}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="BorderBrush" Value="LightGray"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                            <Setter Property="Margin" Value="2"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <ListViewItemPresenter
                                                    SelectedPointerOverBackground="LightBlue"
                                                    PointerOverBackground="LightBlue"
                                                    PressedBackground="LightBlue" />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="data:Medicine">
                                            <RelativePanel VerticalAlignment="Center">

                                                <TextBlock Text="{x:Bind name}" Margin="20,0,0,0"
                                                           Style="{StaticResource 14Blue}"
                                                           RelativePanel.AlignLeftWithPanel="True" />

                                                <TextBlock Text="Rs "
                                                           Style="{StaticResource 14Gray}"
                                                           RelativePanel.LeftOf="LblMedListPrice"/>

                                                <TextBlock x:Name="LblMedListPrice" Text="{x:Bind price}"
                                                           RelativePanel.AlignRightWithPanel="True"
                                                           Style="{StaticResource 14Blue}"
                                                           Margin="3,0,20,0"/>

                                            </RelativePanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                            </RelativePanel>

                            <!-- CHOOSE SERVICE -->
                            <RelativePanel x:Name="PanelServicesList" Background="White" Grid.Column="0" 
                                   Margin="10,0,0,10" Visibility="Collapsed">

                                <TextBlock x:Name="LblServicesListTitle" Style="{StaticResource 22Gray}"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                           Margin="10" RelativePanel.AlignTopWithPanel="True">
                                Services
                                </TextBlock>

                                <Button x:Name="BtnCancelServicesList" Click="BtnCancelServicesList_Click" Margin="10"
                                                            Tag="{x:Bind fileName}" RelativePanel.AlignRightWithPanel="True"
                                                            Template="{StaticResource WhiteButtonTemplate}">
                                    <SymbolIcon Symbol="Cancel"/>
                                </Button>

                                <!-- separator -->
                                <Rectangle x:Name="DividerServicesList" Height="1" RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.Below="LblServicesListTitle"
                                       RelativePanel.AlignRightWithPanel="True"
                                       Fill="{StaticResource AppBlueDarker}"
                                       Margin="40,0"/>

                                <ListView x:Name="ListAddService" IsItemClickEnabled="True"
                                  ItemClick="ListAddService_ItemClick"
                                  ItemsSource="{x:Bind Path=serviceList}"
                                  RelativePanel.AlignRightWithPanel="True"
                                  RelativePanel.AlignLeftWithPanel="True"
                                  RelativePanel.AlignBottomWithPanel="True"
                                  RelativePanel.Below="DividerServicesList">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="BorderBrush" Value="LightGray"/>
                                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                            <Setter Property="Margin" Value="2"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <ListViewItemPresenter
                                                    SelectedPointerOverBackground="LightBlue"
                                                    PointerOverBackground="LightBlue"
                                                    PressedBackground="LightBlue" />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>

                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="data:Service">

                                            <RelativePanel VerticalAlignment="Center">

                                                <TextBlock Text="{x:Bind name}" Margin="20,0,0,0"
                                                           Style="{StaticResource 14Blue}"
                                                           RelativePanel.AlignLeftWithPanel="True" />

                                                <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                        Orientation="Horizontal">
                                                    <TextBlock Text="Type: "
                                                           Style="{StaticResource 14Gray}" />

                                                    <TextBlock Text="{x:Bind type}"
                                                           Style="{StaticResource 14Blue}" 
                                                           Margin="3,0,0,0"/>
                                                </StackPanel>

                                                <StackPanel RelativePanel.AlignRightWithPanel="True"
                                                        Orientation="Horizontal">
                                                    <TextBlock Text="Rs"
                                                           Style="{StaticResource 14Gray}" />

                                                    <TextBlock Text="{x:Bind price}" Margin="3,0,20,0"
                                                           Style="{StaticResource 14Blue}" />
                                                </StackPanel>


                                            </RelativePanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>

                                </ListView>

                            </RelativePanel>

                            <!-- MEDICATION AND SERVICES -->
                            <Grid x:Name="PanelAddMedServ" Margin="10,0,0,10" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"></RowDefinition>
                                    <RowDefinition Height="4*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <!-- MEDICATION -->
                                <RelativePanel Background="White" Grid.Row="0" Margin="0,0,0,10">

                                    <!-- Title -->
                                    <TextBlock x:Name="LblMedicationTitle" Style="{StaticResource 22Gray}"
                                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                                               Margin="10">
                                        Medication
                                    </TextBlock>

                                    <!-- Button - Add -->
                                    <Button x:Name="BtnAddMed"
                                            RelativePanel.AlignLeftWithPanel="True"
                                            Width="40" Height="40" Margin="2" 
                                            Template="{StaticResource BlueButtonTemplate}" 
                                            Foreground="White"
                                            FontSize="22" Click="BtnAddMed_Click">
                                        <TextBlock Text="&#xE109;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="14"/>
                                    </Button>

                                    <!-- Button - Remove -->
                                    <Button x:Name="BtnRemoveMed"
                                            RelativePanel.AlignRightWithPanel="True"
                                            Width="40" Height="40" Margin="2" 
                                            Template="{StaticResource GrayButtonTemplate}" 
                                            Foreground="White"
                                            FontSize="22" Click="BtnRemoveMed_Click">
                                        <TextBlock Text="&#xE108;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="14" />
                                    </Button>

                                    <!-- separator -->
                                    <Rectangle x:Name="DividerMeds" Height="1" RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.Below="LblMedicationTitle"
                                       RelativePanel.AlignRightWithPanel="True"
                                       Fill="{StaticResource AppBlueDarker}"
                                       Margin="40,0"/>

                                    <!-- Med List -->
                                    <ListView x:Name="ListPatientMeds" IsItemClickEnabled="False" 
                                          RelativePanel.AlignRightWithPanel="True"
                                          RelativePanel.AlignLeftWithPanel="True"
                                          RelativePanel.AlignBottomWithPanel="True"
                                              RelativePanel.Below="DividerMeds"
                                          ItemsSource="{x:Bind Path=patientMedList}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="BorderBrush" Value="LightGray"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="Margin" Value="2"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <ListViewItemPresenter
                                                    SelectedPointerOverBackground="LightBlue"
                                                    PointerOverBackground="LightBlue"
                                                    PressedBackground="LightBlue"
                                                    SelectedBackground="LightBlue" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>

                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="data:Medicine">
                                                <RelativePanel VerticalAlignment="Center">

                                                    <TextBlock Text="{x:Bind name}" Margin="20,0,0,0"
                                                           Style="{StaticResource 14Blue}"
                                                           RelativePanel.AlignLeftWithPanel="True" />

                                                    <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                        Orientation="Horizontal">
                                                        <TextBlock Text="Qty: "
                                                           Style="{StaticResource 14Gray}" />

                                                        <TextBlock Text="{x:Bind quantity}"
                                                           Style="{StaticResource 14Blue}" 
                                                           Margin="3,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel RelativePanel.AlignRightWithPanel="True"
                                                        Orientation="Horizontal">
                                                        <TextBlock Text="Rs"
                                                           Style="{StaticResource 14Gray}" />

                                                        <TextBlock Text="{x:Bind price}" Margin="1,0,20,0"
                                                           Style="{StaticResource 14Blue}" />
                                                    </StackPanel>


                                                </RelativePanel>

                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                    <!-- No Meds Panel -->
                                    <RelativePanel x:Name="NoMedsPanel" Visibility="Collapsed"
                                                   Background="White"
                                                   RelativePanel.Below="DividerMeds"
                                                   RelativePanel.AlignBottomWithPanel="True"
                                                   RelativePanel.AlignLeftWithPanel="True"
                                                   RelativePanel.AlignRightWithPanel="True">
                                        <TextBlock x:Name="TxtNoMeds" 
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                   Style="{StaticResource 18LightGray}">
                                            No Medication Added.
                                        </TextBlock>
                                    </RelativePanel>

                                </RelativePanel>

                                <!-- SERVICES -->
                                <RelativePanel Background="White" Grid.Row="1" Margin="0,0,0,10">

                                    <!-- Title -->
                                    <TextBlock x:Name="LblServicesTitle" Style="{StaticResource 22Gray}"
                                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                                               Margin="10">
                                        Services
                                    </TextBlock>

                                    <!-- Button - Add -->
                                    <Button x:Name="BtnAddService"
                                            RelativePanel.AlignLeftWithPanel="True"
                                            Margin="2" Template="{StaticResource BlueButtonTemplate}" 
                                            Foreground="White"
                                            FontSize="22" Click="BtnAddService_Click" Width="40" Height="40">
                                        <TextBlock Text="&#xE109;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="14" FontWeight="Bold"/>
                                    </Button>

                                    <!-- Button - Remove -->
                                    <Button x:Name="BtnRemoveService"
                                            RelativePanel.AlignRightWithPanel="True"
                                            Width="40" Height="40" Margin="2" 
                                            Template="{StaticResource GrayButtonTemplate}" 
                                            Foreground="White"
                                            FontSize="22" Click="BtnRemoveService_Click">
                                        <TextBlock Text="&#xE108;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="14" FontWeight="Bold"/>
                                    </Button>

                                    <!-- separator -->
                                    <Rectangle x:Name="DividerServices" Height="1" RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.Below="LblServicesTitle"
                                       RelativePanel.AlignRightWithPanel="True"
                                       Fill="{StaticResource AppBlueDarker}"
                                       Margin="40,0"/>

                                    <!-- Services List -->
                                    <ListView x:Name="ListPatientServices" IsItemClickEnabled="False" 
                                      RelativePanel.AlignRightWithPanel="True"
                                      RelativePanel.AlignLeftWithPanel="True"
                                      RelativePanel.AlignBottomWithPanel="True"
                                          RelativePanel.Below="DividerServices"
                                      ItemsSource="{x:Bind Path=patientServiceList}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="BorderBrush" Value="LightGray"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="Margin" Value="2"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <ListViewItemPresenter
                                                    SelectedPointerOverBackground="LightBlue"
                                                    PointerOverBackground="LightBlue"
                                                    PressedBackground="LightBlue"
                                                    SelectedBackground="LightBlue" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="data:Service">
                                                <RelativePanel VerticalAlignment="Center">

                                                    <TextBlock Text="{x:Bind name}" Margin="20,0,0,0"
                                                           Style="{StaticResource 14Blue}"
                                                           RelativePanel.AlignLeftWithPanel="True" />

                                                    <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                        Orientation="Horizontal">
                                                        <TextBlock Text="Type: "
                                                           Style="{StaticResource 14Gray}" />

                                                        <TextBlock Text="{x:Bind type}"
                                                           Style="{StaticResource 14Blue}" 
                                                           Margin="3,0,0,0"/>
                                                    </StackPanel>

                                                    <StackPanel RelativePanel.AlignRightWithPanel="True"
                                                        Orientation="Horizontal">
                                                        <TextBlock Text="Rs"
                                                           Style="{StaticResource 14Gray}" />

                                                        <TextBlock Text="{x:Bind price}" Margin="3,0,20,0"
                                                           Style="{StaticResource 14Blue}" />
                                                    </StackPanel>


                                                </RelativePanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                    <!-- No Meds Panel -->
                                    <RelativePanel x:Name="NoServicePanel" Visibility="Collapsed"
                                                   Background="White"
                                                   RelativePanel.Below="DividerServices"
                                                   RelativePanel.AlignBottomWithPanel="True"
                                                   RelativePanel.AlignLeftWithPanel="True"
                                                   RelativePanel.AlignRightWithPanel="True">
                                        <TextBlock x:Name="TxtNoServices" 
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                   Style="{StaticResource 18LightGray}">
                                            No Services Added.
                                        </TextBlock>
                                    </RelativePanel>


                                </RelativePanel>

                                <!-- ASSESSMENT BUTTON -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button x:Name="BtnNewAssessment" 
                                            Template="{StaticResource BlueButtonTemplate}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0" Padding="40,20,40,20" FontSize="18"
                                            VerticalAlignment="Stretch" Click="BtnNewAssessment_Click">
                                        Assessment Details
                                    </Button>
                                </Grid>

                            </Grid>

                            <!-- MAIN DETAILS -->
                            <Grid x:Name="grd" Grid.Column="1" Background="White" Margin="15,0,15,10"
                                  Padding="20,20,20,30">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"></RowDefinition>
                                    <RowDefinition Height="3*"></RowDefinition>
                                    <RowDefinition Height="3*"></RowDefinition>
                                    <RowDefinition Height="3*"></RowDefinition>
                                    <RowDefinition Height="3*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock x:Name="LblName" Style="{StaticResource 32DarkGray}">
                                        John Smith</TextBlock>
                                    <TextBlock x:Name="LblDateTime" HorizontalAlignment="Center" 
                                               Style="{StaticResource 16Gray}">
                                        Date Time</TextBlock>
                                </StackPanel>

                                <!-- AFTER OPENING -->
                                <RelativePanel Grid.Row="1">

                                    <!-- separator -->
                                    <Rectangle Height="1" RelativePanel.AlignLeftWithPanel="True" 
                                       RelativePanel.AlignRightWithPanel="True"
                                       Fill="{StaticResource AppBlueDarker}"
                                       Margin="40,0,40,0"/>


                                    <TextBlock x:Name="LblAfterOpening" Style="{StaticResource 18Blue}" 
                                               Margin="10,20,0,5">
                                *After opening:</TextBlock>

                                    <Grid RelativePanel.AlignRightWithPanel="True"
                              RelativePanel.AlignLeftWithPanel="True"
                              RelativePanel.Below="LblAfterOpening" 
                              RelativePanel.AlignBottomWithPanel="True">

                                        <TextBox x:Name="TxtAfterOpening" Text="" 
                                         Margin="20,0,20,0" Style="{StaticResource TextBoxTemplate}"
                                         AcceptsReturn="True" TextWrapping="Wrap"/>

                                    </Grid>


                                </RelativePanel>

                                <!-- ACTIONS TAKEN -->
                                <RelativePanel Grid.Row="2">
                                    <TextBlock x:Name="LblActionsTaken" Margin="10,10,0,5"
                           Style="{StaticResource 18Blue}">
                    *Actions taken:</TextBlock>

                                    <Grid RelativePanel.AlignRightWithPanel="True"
                          RelativePanel.AlignLeftWithPanel="True"
                          RelativePanel.Below="LblActionsTaken" 
                          RelativePanel.AlignBottomWithPanel="True">

                                        <TextBox x:Name="TxtActionsTaken" Text="" Style="{StaticResource TextBoxTemplate}"
                                         AcceptsReturn="True" TextWrapping="Wrap" Margin="20,0,20,0"/>

                                    </Grid>
                                </RelativePanel>

                                <!-- BEFORE CLOSING -->
                                <RelativePanel Grid.Row="3">

                                    <TextBlock x:Name="LblBeforeClosing" Margin="10,10,0,5"
                                        Style="{StaticResource 18Blue}">
                                        *Before closing:</TextBlock>

                                    <Grid RelativePanel.AlignRightWithPanel="True"
                                      RelativePanel.AlignLeftWithPanel="True"
                                      RelativePanel.Below="LblBeforeClosing" 
                                      RelativePanel.AlignBottomWithPanel="True">

                                        <TextBox x:Name="TxtBeforeClosing" Text="" Style="{StaticResource TextBoxTemplate}"
                                         AcceptsReturn="True" TextWrapping="Wrap"
                                         Margin="20,0,20,0"/>

                                    </Grid>
                                </RelativePanel>

                                <!-- NOTES -->
                                <RelativePanel Grid.Row="4">
                                    <TextBlock x:Name="LblNotes" Margin="10,10,0,5"
                                        Style="{StaticResource 18Blue}">
                                        Notes:</TextBlock>
                                    <Grid RelativePanel.AlignRightWithPanel="True"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.Below="LblNotes" 
                                        RelativePanel.AlignBottomWithPanel="True">

                                        <TextBox x:Name="TxtNotes" Text="" Style="{StaticResource TextBoxTemplate}"
                                         AcceptsReturn="True" TextWrapping="Wrap"
                                         Margin="20,0,20,0"/>

                                    </Grid>
                                </RelativePanel>

                            </Grid>

                            <!-- PICTURES AND DOCUMENTS -->
                            <Grid Grid.Column="2" Margin="0,0,10,10">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"></RowDefinition>
                                    <RowDefinition Height="4*"></RowDefinition>
                                    <RowDefinition Height="1*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <!-- PHOTOS -->
                                <RelativePanel Background="White" Grid.Row="0" Margin="0,0,0,10">

                                    <!-- Title -->
                                    <TextBlock x:Name="LblPicturesTitle" Style="{StaticResource 22Gray}"
                                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                                               Margin="10">
                                        Photos
                                    </TextBlock>

                                    <!-- Button - Add -->
                                    <Button x:Name="BtnAddPic"
                                            RelativePanel.AlignLeftWithPanel="True"
                                            Margin="2" Template="{StaticResource BlueButtonTemplate}" 
                                            Foreground="White"
                                            FontSize="22" Click="BtnAddPic_Click" Width="40" Height="40">
                                        <TextBlock Text="&#xE109;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="14" FontWeight="Bold"/>
                                    </Button>

                                    <!-- Button - Remove -->
                                    <Button x:Name="BtnRemovePic"
                                            RelativePanel.AlignRightWithPanel="True"
                                            Width="40" Height="40" Margin="2" 
                                            Template="{StaticResource GrayButtonTemplate}" 
                                            Foreground="White"
                                            FontSize="22" Click="BtnRemovePhoto_Click">
                                        <TextBlock Text="&#xE108;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="14" FontWeight="Bold"/>
                                    </Button>

                                    <!-- separator -->
                                    <Rectangle x:Name="DividerPhotos" Height="1" 
                                               RelativePanel.AlignLeftWithPanel="True"
                                               RelativePanel.Below="LblPicturesTitle"
                                               RelativePanel.AlignRightWithPanel="True"
                                               Fill="{StaticResource AppBlueDarker}"
                                               Margin="40,0"/>

                                    <!-- List - Photos -->
                                    <ListView x:Name="ListPatientPhotos" IsItemClickEnabled="False" 
                                              RelativePanel.AlignRightWithPanel="True"
                                              RelativePanel.AlignLeftWithPanel="True"
                                              RelativePanel.AlignBottomWithPanel="True"
                                                RelativePanel.Below="DividerPhotos"
                                              ItemsSource="{x:Bind Path=photosCollection}">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="BorderBrush" Value="LightGray"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                <Setter Property="Margin" Value="2"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <ListViewItemPresenter
                                                    SelectedPointerOverBackground="LightBlue"
                                                    PointerOverBackground="LightBlue"
                                                    PressedBackground="LightBlue"
                                                    SelectedBackground="LightBlue" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="data:VisitDocumentInformation">
                                                <RelativePanel VerticalAlignment="Center">

                                                    <TextBlock Text="{x:Bind fileName}" Margin="20,0,0,0"
                                                           Style="{StaticResource 14DarkGray}"
                                                           RelativePanel.AlignLeftWithPanel="True" />

                                                </RelativePanel>

                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                    <!-- No Photos Panel -->
                                    <RelativePanel x:Name="NoPhotosPanel" Visibility="Collapsed"
                                                   Background="White"
                                                   RelativePanel.Below="DividerPhotos"
                                                   RelativePanel.AlignBottomWithPanel="True"
                                                   RelativePanel.AlignLeftWithPanel="True"
                                                   RelativePanel.AlignRightWithPanel="True">
                                        <TextBlock x:Name="TxtNoPhotos" 
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                   Style="{StaticResource 18LightGray}">
                                            No Photos Added.
                                        </TextBlock>
                                    </RelativePanel>

                                </RelativePanel>

                                <!-- DOCUMENTS -->
                                <RelativePanel Background="White" Grid.Row="1" Margin="0,0,0,10">

                                    <!-- Title -->
                                    <TextBlock x:Name="LblDocumentsTitle" Style="{StaticResource 22Gray}"
                                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                                            Margin="10">
                                                Documents
                                    </TextBlock>

                                    <!-- Button - Add -->
                                    <Button x:Name="BtnAddDoc"
                                            RelativePanel.AlignLeftWithPanel="True"
                                            Margin="2" Template="{StaticResource BlueButtonTemplate}" 
                                            Foreground="White"
                                            FontSize="22" Click="BtnAddDoc_Click" Width="40" Height="40">
