                            <StackPanel Background="White" Padding="60,30" Margin="0">

                                <!-- Row 20 -->
                                <Grid Margin="0,40,0,20" x:Name="Row20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,40,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Extent of undermining:</TextBlock>
                                        <TextBox x:Name="TxtUndermining" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,40,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Wound surface:</TextBlock>
                                        <TextBox x:Name="TxtWoundSurface" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Style="{StaticResource 20Blue}">Status of periwound tissue:</TextBlock>
                                        <TextBox x:Name="TxtPeriwound" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                </Grid>

                                <!-- Row 21 -->
                                <Grid Margin="0,40,0,20" x:Name="Row21">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,40,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Hypertrophic Callus:</TextBlock>
                                        <TextBox x:Name="TxtCallus" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,40,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Brittle Nail:</TextBlock>
                                        <TextBox x:Name="TxtBrittleNail" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Style="{StaticResource 20Blue}">Hammer Toe:</TextBlock>
                                        <TextBox x:Name="TxtHammerToe" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                </Grid>

                                <!-- Row 15 -->
                                <Grid Margin="0,20,0,20" x:Name="Row15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,60,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Site:</TextBlock>
                                        <TextBox x:Name="TxtSite" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="60,0,0,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Size:</TextBlock>
                                        <TextBox x:Name="TxtSize" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                </Grid>

                                <!-- Row 16 -->
                                <Grid Margin="0,40,0,20" x:Name="Row16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,60,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Depth:</TextBlock>
                                        <TextBox x:Name="TxtDepth" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="60,0,0,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Wound Exudate:</TextBlock>
                                        <TextBox x:Name="TxtWoundExudate" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                </Grid>

                                <!-- Row 17 -->
                                <Grid Margin="0,40,0,20" x:Name="Row17">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,60,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Circumferential:</TextBlock>
                                        <TextBox x:Name="TxtCircumferential" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="60,0,0,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Peripheral circulation:</TextBlock>
                                        <TextBox x:Name="TxtCirculation" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>


                                </Grid>

                                <!-- Row 18 -->
                                <Grid Margin="0,40,0,20" x:Name="Row18">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,60,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Fissures:</TextBlock>
                                        <TextBox x:Name="TxtFissures" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="60,0,0,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Loss of pedal hair growth:</TextBlock>
                                        <TextBox x:Name="TxtLossHairGrowth" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                </Grid>

                                <!-- Row 19 -->
                                <Grid Margin="0,40,0,20" x:Name="Row19">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,60,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Cyanosis of toes:</TextBlock>
                                        <TextBox x:Name="TxtCyanosis" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="60,0,0,0">
                                        <TextBlock Style="{StaticResource 20Blue}">Pallor of foot:</TextBlock>
                                        <TextBox x:Name="TxtPallorFoot" Style="{StaticResource TextBoxTemplate}"/>
                                    </StackPanel>

                                </Grid>

                                <!-- Row 22 -->
                                <Grid Margin="0,40,0,20" x:Name="Row22">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,60,0">
                                        <TextBlock Style="{StaticResource 20Blue}"
                                               Margin="0,0,0,5">Duration of non-healing ulcer:</TextBlock>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="TxtDurationUlcer" Style="{StaticResource TextBoxTemplate}"
                                             MaxWidth="200" Width="200" HorizontalAlignment="Left"/>
                                            <Button  Margin="20,0,0,0" IsTabStop="False"
                                                Template="{StaticResource AddCommentButtonTemplate}">
                                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE712;" FontSize="24" />
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <Flyout.FlyoutPresenterStyle>
                                                            <Style TargetType="FlyoutPresenter">
                                                                <Setter Property="Background" Value="White"/>

                                                            </Style>
                                                        </Flyout.FlyoutPresenterStyle>
                                                        <StackPanel Width="400" Margin="0" Background="White">
                                                            <TextBlock Margin="10">Add a comment:</TextBlock>
                                                            <TextBox Margin="10" x:Name="TxtCommentDurationUlcer" Style="{StaticResource TextBoxTemplate}"/>

                                                        </StackPanel>
                                                    </Flyout>

                                                </Button.Flyout>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>

                                </Grid>


                            </StackPanel>
                        </StackPanel>

                    </ScrollViewer>

                </Grid>

                <!-- ERROR PANEL -->
                <RelativePanel x:Name="PanelError2" Background="Gray"
									   Visibility="Collapsed"
                                       MaxWidth="1000" Width="800"
                               RelativePanel.Below="PanelAssessmentTitle"
                                               Height="60" Margin="20,10,20,0"
                           
									   RelativePanel.AlignLeftWithPanel="True"
									   RelativePanel.AlignRightWithPanel="True">

                    <TextBlock x:Name="TxtErrorMessage2" Margin="20,15,20,15" Style="{StaticResource 16White}"
									   TextWrapping="WrapWholeWords">Error</TextBlock>

                    <Button x:Name="BtnErrorClose2" Template="{StaticResource WhiteTextBtn}" 
									RelativePanel.AlignRightWithPanel="True"
									RelativePanel.AlignTopWithPanel="True"
									Padding="5" Click="BtnErrorClose2_Click">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="15"
										   FontWeight="Bold"/>
                    </Button>

                </RelativePanel>

                <!-- BUTTON PANEL -->
                <RelativePanel Background="White" x:Name="FooterPanel" 
                               RelativePanel.AlignBottomWithPanel="True"
                  RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True" 
                  Margin="10,0,10,10">

                    <!-- Add -->
                    <Button x:Name="BtnAddAssessment"  Content="Add Details" 
                            RelativePanel.AlignRightWithPanel="True"
                         Template="{StaticResource BlueButtonTemplate}"
                         Margin="10,10,10,10" Click="BtnAddAssessment_Click"
                    Width="200" Height="50"/>

                    <!-- Remove -->
                    <Button x:Name="BtnRemoveAssessment"  Content="Remove Details" 
                            Visibility="Collapsed"
                            RelativePanel.LeftOf="BtnAddAssessment"
                         Template="{StaticResource GrayButtonTemplate}"
                         Margin="10,10,10,10" Click="BtnRemoveAssessment_Click"
                    Width="200" Height="50"/>



                </RelativePanel>
            </RelativePanel>

        </Grid>
    </Grid>




</Page>
