<Page x:ConnectionId='1'
    x:Class="WoundManagementSystem.PatientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WoundManagementSystem"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:WoundManagementSystem"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="DatePickerTemplate" TargetType="CalendarDatePicker">
            <Setter Property="Foreground" Value="{ThemeResource CalendarDatePickerForeground}"/>
            <Setter Property="Background" Value="{ThemeResource CalendarDatePickerBackground}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CalendarDatePickerBorderBrush}"/>
            <Setter Property="BorderThickness" Value="{ThemeResource CalendarDatePickerBorderThemeThickness}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CalendarDatePicker">
                        <Grid x:Name="Root">
                            <FlyoutBase.AttachedFlyout>
                                <Flyout Placement="Bottom">
                                    <Flyout.FlyoutPresenterStyle>
                                        <Style TargetType="FlyoutPresenter">
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="FlyoutPresenter">
                                                        <ContentPresenter BorderBrush="{TemplateBinding BorderBrush}" 
                                                                          BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" 
                                                                          ContentTemplate="{TemplateBinding ContentTemplate}" ContentTransitions="{TemplateBinding ContentTransitions}" 
                                                                          Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                                          Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Flyout.FlyoutPresenterStyle>

                                    <CalendarView x:ConnectionId='2' x:Name="CalendarView"
                                                  SelectedHoverBorderBrush="{StaticResource AppBlueDarker}"
                                                  SelectedBorderBrush="{StaticResource AppBlueDarker}"
                                                  CalendarIdentifier="{TemplateBinding CalendarIdentifier}" 
                                                  DisplayMode="{TemplateBinding DisplayMode}" 
                                                  DayOfWeekFormat="{TemplateBinding DayOfWeekFormat}" 
                                                  FirstDayOfWeek="{TemplateBinding FirstDayOfWeek}" 
                                                  IsTodayHighlighted="{TemplateBinding IsTodayHighlighted}" 
                                                  IsGroupLabelVisible="{TemplateBinding IsGroupLabelVisible}" 
                                                  IsOutOfScopeEnabled="{TemplateBinding IsOutOfScopeEnabled}"
                                                  MinDate="{TemplateBinding MinDate}" 
                                                  MaxDate="{TemplateBinding MaxDate}" 
                                                                                                                        
                                                  Style="{TemplateBinding CalendarViewStyle}"/>

                                </Flyout>
                            </FlyoutBase.AttachedFlyout>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="32"/>
                            </Grid.RowDefinitions>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerBorderBrushPointerOver}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerBackgroundPointerOver}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerBackgroundPressed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerBorderBrushPressed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerBackgroundDisabled}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerBorderBrushDisabled}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="HeaderContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerHeaderForegroundDisabled}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="DateText">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerTextForegroundDisabled}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="CalendarGlyph">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerCalendarGlyphForegroundDisabled}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Unfocused"/>
                                    <VisualState x:Name="PointerFocused"/>
                                    <VisualState x:Name="Focused">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerBackgroundFocused}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected"/>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="DateText">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource CalendarDatePickerTextForegroundSelected}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="HeaderContentPresenter" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" Margin="{ThemeResource ComboBoxHeaderThemeMargin}" TextWrapping="Wrap" Visibility="Collapsed" x:DeferLoadStrategy="Lazy"/>
                            <Border x:Name="Background" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Grid.ColumnSpan="2" Grid.Row="1"/>
                            <TextBlock x:Name="DateText" Foreground="{ThemeResource CalendarDatePickerTextForeground}" FontSize="15" HorizontalAlignment="Left" Padding="12, 0, 0, 2" Grid.Row="1" Text="{TemplateBinding PlaceholderText}" VerticalAlignment="Center"/>
                            <FontIcon x:Name="CalendarGlyph" Grid.Column="1" Foreground="{ThemeResource CalendarDatePickerCalendarGlyphForeground}" FontSize="16" FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE787;" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <SplitView x:ConnectionId='3' x:Name="MainSplitView">
        <SplitView.Pane>
            <RelativePanel Background="White" BorderBrush="#999999" BorderThickness="0,0,1,0">

                <Button x:ConnectionId='4' x:Name="BtnCloseNav"                            Height="45" Width="45" FontSize="22"
                        RelativePanel.AlignRightWithPanel="True" Template="{StaticResource WhiteButtonTemplate}">
                    <SymbolIcon Symbol="Cancel"/>
                </Button>

                <RelativePanel Background="White"
                               RelativePanel.AlignBottomWithPanel="True"
                               RelativePanel.AlignLeftWithPanel="True"
                               RelativePanel.AlignRightWithPanel="True"
                               RelativePanel.Below="BtnCloseNav">

                    <Grid x:ConnectionId='5' x:Name="GridLogo" Height="50"
                      RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignRightWithPanel="True">
                        <Image x:ConnectionId='25' x:Name="logo" Source="{StaticResource LogoImage}"/>
                    </Grid>

                    <StackPanel x:ConnectionId='6' x:Name="NavPanel" Background="White"
                            RelativePanel.Below="GridLogo"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignBottomWithPanel="True"
                            Margin="0,20,0,0">

                        <Button x:ConnectionId='9' x:Name="NavPatients"                          
                        Style="{StaticResource NavButton}">

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image x:ConnectionId='24' x:Name="PatientIcon" Source="{StaticResource IconPatients}"
                               Style="{StaticResource NavIcon}"/>
                                <TextBlock>Patients</TextBlock>
                            </StackPanel>

                        </Button>

                        <Button x:ConnectionId='10' x:Name="NavStaff"                       
                        Style="{StaticResource NavButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image x:ConnectionId='23' x:Name="StaffIcon" Source="{StaticResource IconStaff}"
                               Style="{StaticResource NavIcon}"/>
                                <TextBlock>Staff</TextBlock>
                            </StackPanel>
                        </Button>

                        <Button x:ConnectionId='11' Name="NavStock"                       
                        Style="{StaticResource NavButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image x:ConnectionId='22' x:Name="StockIcon" Source="{StaticResource IconStock}"
                               Style="{StaticResource NavIcon}"/>
                                <TextBlock>Stock</TextBlock>
                            </StackPanel>
                        </Button>

                        <Button x:ConnectionId='12' Name="NavPriceLists"                            
                        Style="{StaticResource NavButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image x:ConnectionId='21' x:Name="PriceListsIcon" Source="{StaticResource IconPriceLists}"
                               Style="{StaticResource NavIcon}"/>
                                <TextBlock>Price Lists</TextBlock>
                            </StackPanel>
                        </Button>

                        <Button x:ConnectionId='13' Name="NavServices"                          
                        Style="{StaticResource NavButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image x:ConnectionId='20' x:Name="ServicesIcon" Source="{StaticResource IconServices}"
                               Style="{StaticResource NavIcon}"/>
                                <TextBlock>Services</TextBlock>
                            </StackPanel>
                        </Button>

                        <Button x:ConnectionId='14' x:Name="NavContacts"                          
                        Style="{StaticResource NavButton}">

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image x:ConnectionId='19' x:Name="ContactsIcon" Source="{StaticResource IconContacts}"
                               Style="{StaticResource NavIcon}"/>
                                <TextBlock>Contacts</TextBlock>
                            </StackPanel>

                        </Button>

                        <Button x:ConnectionId='15' Name="NavFinances"                          
                        Style="{StaticResource NavButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image x:ConnectionId='18' x:Name="FinancesIcon" Source="{StaticResource IconFinances}"
                               Style="{StaticResource NavIcon}"/>
                                <TextBlock>Finances</TextBlock>
                            </StackPanel>
                        </Button>

                        <Button x:ConnectionId='16' Name="NavForms"                       
                        Style="{StaticResource NavButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image x:ConnectionId='17' x:Name="FormsIcon" Source="{StaticResource IconForms}"
                               Style="{StaticResource NavIcon}"/>
                                <TextBlock>Forms</TextBlock>
                            </StackPanel>
                        </Button>

                    </StackPanel>

                    <Button x:ConnectionId='7' x:Name="NavLogout" RelativePanel.AlignBottomWithPanel="True"
                    Style="{StaticResource NavButton}"                        
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.AlignLeftWithPanel="True">

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image x:ConnectionId='8' x:Name="LogoutIcon" Source="{StaticResource IconLogout}"
                               Style="{StaticResource NavIcon}"/>
                            <TextBlock>Logout</TextBlock>
                        </StackPanel>

                    </Button>
                </RelativePanel>

            </RelativePanel>

        </SplitView.Pane>


        <SplitView.Content>
            <RelativePanel Background="Transparent">
                <Image Source="{StaticResource NavigationBackground}"
                   Opacity="0.7"
                   Stretch="UniformToFill"/>

                <!-- TITLE -->
                <Grid x:ConnectionId='26' x:Name="GridTitle"
                          RelativePanel.AlignRightWithPanel="True"
                          RelativePanel.AlignLeftWithPanel="True"
                          RelativePanel.AlignTopWithPanel="True"
                          Margin="10,10,10,10" Background="White">

                    <Button x:ConnectionId='96' x:Name="BtnOpenNav" HorizontalAlignment="Left" Margin="10"
                                Height="45" Width="45" FontSize="22"                           
                                Template="{StaticResource WhiteButtonTemplate}">
                        <SymbolIcon Symbol="AllApps"/>
                    </Button>

                    <Button x:ConnectionId='97' x:Name="BtnCancelPatientDetails" HorizontalAlignment="Right" Margin="10"
                                Height="45" Width="45" FontSize="22"                                      
                                Template="{StaticResource WhiteButtonTemplate}">
                        <SymbolIcon Symbol="Cancel"/>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image x:ConnectionId='98' x:Name="IconAppts" Source="{StaticResource IconPatients}" 
                           Width="30" Height="30"/>
                        <TextBlock x:ConnectionId='99' x:Name="LblMainTitle" Style="{StaticResource Title}">
                        Patients</TextBlock>
                    </StackPanel>

                </Grid>

                <!-- Main Panel -->
                <Grid x:ConnectionId='27' x:Name="MainPanel" RelativePanel.Below="GridTitle"
                      RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignBottomWithPanel="True" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- List Panel -->
                    <RelativePanel x:ConnectionId='28' x:Name="ListPanel" Background="White"
                                Grid.Column="0" Margin="0,0,5,0">

                        <!-- Search Panel -->
                        <RelativePanel x:ConnectionId='85' x:Name="PanelSearch" RelativePanel.AlignRightWithPanel="True"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.AlignTopWithPanel="True" Padding="10">

                            <!--Button - Add Patient-->
                            <Button x:ConnectionId='94' x:Name="BtnAddPatient" Margin="1"
                                    RelativePanel.AlignLeftWithPanel="True"
                                    RelativePanel.AlignVerticalCenterWithPanel="True"
                                                               
                                    Template="{StaticResource BlueButtonTemplate}">

                                <StackPanel Orientation="Horizontal" Padding="10,5,10,5">
                                    <SymbolIcon Symbol="Add" Margin="0,0,10,0"/>
                                    <TextBlock HorizontalAlignment="Center" Style="{StaticResource 16White}">
                                    Add Patient</TextBlock>
                                </StackPanel>
                            </Button>

                            <!-- Search box -->
                            <TextBox x:ConnectionId='95' x:Name="TxtSearch" PlaceholderText="Search"
                                     Style="{StaticResource TextBoxTemplate}"
                                     RelativePanel.AlignRightWithPanel="True" Width="200"
                                     RelativePanel.AlignVerticalCenterWithPanel="True"
                                                                        />


                        </RelativePanel>

                        <!-- List -->
                        <ListView x:ConnectionId='86' x:Name="ListViewPatient" 
                                  RelativePanel.Above="BtnViewArchived"
                                  RelativePanel.AlignLeftWithPanel="True"
                                  RelativePanel.AlignRightWithPanel="True"
                                  RelativePanel.Below="PanelSearch"
                                  IsItemClickEnabled="True"
                                                                       
                                                                         
                                  VerticalAlignment="Stretch">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="BorderBrush" Value="LightGray"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Margin" Value="2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ListViewItemPresenter
                                                    SelectedPointerOverBackground="LightBlue"
                                                    PointerOverBackground="LightBlue"
                                                    PressedBackground="LightBlue"
                                                    SelectedBackground="LightBlue" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate                          >
                                    <RelativePanel x:ConnectionId='90'>

                                        <TextBlock x:Name="LblListID" Text="ID: " Margin="20,0,0,0"
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   Style="{StaticResource 18DarkGray}"/>

                                        <TextBlock x:ConnectionId='91' x:Name="TxtListID"                          
                                                   RelativePanel.RightOf="LblListID"
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   Margin="5,0,30,0"
                                                   Style="{StaticResource 18Blue}"/>

                                        <TextBlock x:Name="LblListName" Text="Name: " Margin="20,0,5,0"
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   RelativePanel.RightOf="TxtListID"
                                                   Style="{StaticResource 18DarkGray}"/>

                                        <StackPanel Orientation="Horizontal" RelativePanel.RightOf="LblListName"
                                                    RelativePanel.AlignVerticalCenterWithPanel="True">
                                            <TextBlock x:ConnectionId='92'                      Margin="0,0,5,0"
                                                       Style="{StaticResource 18Blue}"/>
                                            <TextBlock x:ConnectionId='93'                         
                                                       Style="{StaticResource 18Blue}"/>
                                        </StackPanel>

                                    </RelativePanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>

                        <!-- Button - View Archived -->
                        <Button x:ConnectionId='87' x:Name="BtnViewArchived" RelativePanel.AlignBottomWithPanel="True"
                                RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="20"
                                                              Template="{StaticResource BlueButtonTemplate}">
                            <StackPanel Orientation="Horizontal" Padding="10,5,10,5">
                                <SymbolIcon Symbol="View" Margin="0,0,10,0"/>
                                <TextBlock x:ConnectionId='89' x:Name="BtnArchiveLabel" 
                                           HorizontalAlignment="Center" Style="{StaticResource 16White}">
                                    View Archived Patients</TextBlock>
                            </StackPanel>
                        </Button>

                        <!-- No results panel -->
                        <RelativePanel x:ConnectionId='88' x:Name="PanelNoResult" Background="White"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.AlignRightWithPanel="True"
                                       RelativePanel.AlignBottomWithPanel="True"
                                       RelativePanel.Below="PanelSearch"
                                       Visibility="Collapsed">

                            <TextBlock Text="Your search returned no results."
                                       RelativePanel.AlignTopWithPanel="True"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.AlignRightWithPanel="True"
                                       TextAlignment="Center" Style="{StaticResource 22LightGray}"
                                       Margin="40"/>

                        </RelativePanel>

                    </RelativePanel>

                    <!-- Details Panel -->
                    <RelativePanel x:ConnectionId='29' x:Name="DetailsPanel" Grid.Column="1" Background="White" Margin="5,0,0,0"
                                   RelativePanel.AlignRightWithPanel="True" Visibility="Visible"
                                       RelativePanel.AlignBottomWithPanel="True"
                                       RelativePanel.AlignTopWithPanel="True"
                                       RelativePanel.AlignLeftWithPanel="True">

                        <RelativePanel RelativePanel.AlignTopWithPanel="True"
                                       RelativePanel.AlignBottomWithPanel="True"
                                       RelativePanel.AlignRightWithPanel="True"
                                       RelativePanel.AlignLeftWithPanel="True">

                            <!-- Title + Name -->
                            <StackPanel x:ConnectionId='68' x:Name="PanelName" Margin="0,20,0,0" 
                                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                                           RelativePanel.AlignTopWithPanel="True" Orientation="Horizontal">
                                <TextBlock x:ConnectionId='83' Name="LblPatientTitle" Style="{StaticResource 32DarkGray}"
                                           Margin="0,0,10,0">
                                    Mr.
                                </TextBlock>
                                <TextBlock x:ConnectionId='84' x:Name="LblPatientName"
                                       Style="{StaticResource 32DarkGray}">Patient Name</TextBlock>
                            </StackPanel>

                            <!-- ID -->
                            <StackPanel x:ConnectionId='69' x:Name="PanelID" Margin="0,5,0,0" RelativePanel.Below="PanelName" 
                                        Orientation="Horizontal" RelativePanel.AlignHorizontalCenterWithPanel="True">
                                <TextBlock x:ConnectionId='81' x:Name="LblIDLabel" Style="{StaticResource 16Gray}"
                                           Margin="0,0,3,0">Patient ID:</TextBlock>

                                <TextBlock x:ConnectionId='82' x:Name="LblPatientID" RelativePanel.RightOf="LblIDLabel"
                                           Style="{StaticResource 16Gray}">ID</TextBlock>

                            </StackPanel>

                            <Rectangle x:ConnectionId='70' x:Name="Div2" Height="1" Fill="{StaticResource AppBlueDarker}" RelativePanel.Below="PanelID"
                                           RelativePanel.AlignRightWithPanel="True" Margin="30,10,30,0"
                                           RelativePanel.AlignLeftWithPanel="True"/>

                            <Grid Background="White" RelativePanel.AlignRightWithPanel="True"
                                  RelativePanel.AlignLeftWithPanel="True" RelativePanel.Above="PanelButtons"
                                  RelativePanel.Below="Div2" Margin="50,20,50,20">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Style="{StaticResource 20Blue}" Margin="0,10">
                                        Date of Birth:</TextBlock>
                                    <TextBlock Style="{StaticResource 20Blue}" Margin="0,10">
                                        Sex:</TextBlock>
                                    <TextBlock Style="{StaticResource 20Blue}" Margin="0,10">
                                        Address:</TextBlock>
                                    <TextBlock Style="{StaticResource 20Blue}" Margin="0,10">
                                        Contact:</TextBlock>
                                    <TextBlock Style="{StaticResource 20Blue}" Margin="0,10">
                                        Email:</TextBlock>
                                    <TextBlock Style="{StaticResource 20Blue}" Margin="0,10">
                                        Occupation:</TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock x:ConnectionId='75' Name="LblDOB"
                                               Style="{StaticResource 20DarkGray}" Margin="0,10">
                                        DOB</TextBlock>

                                    <TextBlock x:ConnectionId='76' Name="LblSex"
                                               Style="{StaticResource 20DarkGray}" Margin="0,10">
                                        Sex</TextBlock>

                                    <TextBlock x:ConnectionId='77' Name="LblPatientAddress"
                                               Style="{StaticResource 20DarkGray}" Margin="0,10">
                                        Address</TextBlock>

                                    <TextBlock x:ConnectionId='78' Name="LblPatientContact"
                                               Style="{StaticResource 20DarkGray}" Margin="0,10">
                                        Contact</TextBlock>

                                    <TextBlock x:ConnectionId='79' Name="LblPatientEmail"
                                               Style="{StaticResource 20DarkGray}" Margin="0,10">
                                        Email</TextBlock>

                                    <TextBlock x:ConnectionId='80' Name="LblPatientOccupation"
                                               Style="{StaticResource 20DarkGray}" Margin="0,10">
                                        Occupation</TextBlock>
                                </StackPanel>



                            </Grid>

                            <!-- BUTTON PANEL -->

                            <RelativePanel x:ConnectionId='71' x:Name="PanelButtons" RelativePanel.AlignBottomWithPanel="True"
                                           RelativePanel.AlignRightWithPanel="True" Margin="0,0,1,1">

                                <!--Button - Remove Patient-->
                                <Button x:ConnectionId='72' x:Name="BtnArchive" Width="120" Height="100"                         
                                        RelativePanel.AlignRightWithPanel="True" Margin="1,0,0,0"
                                        Template="{StaticResource GrayButtonTemplate}">

                                    <StackPanel Orientation="Vertical">
                                        <SymbolIcon Symbol="Delete" Margin="0,0,0,10"/>
                                        <TextBlock HorizontalAlignment="Center" Margin="0"
                                           Style="{StaticResource 16White}">
                                        Remove</TextBlock>
                                    </StackPanel>

                                </Button>

                                <!--Button - Modify Patient-->
                                <Button x:ConnectionId='73' x:Name="BtnModify" Width="120" Height="100" Margin="1,0,0,0"
                                        RelativePanel.LeftOf="BtnArchive"                        
                                Template="{StaticResource BlueButtonTemplate}">

                                    <StackPanel Orientation="Vertical">
                                        <SymbolIcon Symbol="Edit" Margin="0,0,0,10"/>
                                        <TextBlock HorizontalAlignment="Center" Margin="0"
                                           Style="{StaticResource 16White}">
                                        Modify</TextBlock>
                                    </StackPanel>

                                </Button>

                                <!--Button - View Visits-->
                                <Button x:ConnectionId='74' x:Name="BtnViewVisits" Width="120" Height="100" Margin="1,0,0,0"
                                        RelativePanel.LeftOf="BtnModify"                            
                                Template="{StaticResource BlueButtonTemplate}">

                                    <StackPanel Orientation="Vertical">
                                        <SymbolIcon Symbol="View" Margin="0,0,0,10"/>
                                        <TextBlock HorizontalAlignment="Center" Margin="0"
                                           Style="{StaticResource 16White}">
                                        View Visits</TextBlock>
                                    </StackPanel>

                                </Button>


                            </RelativePanel>



                        </RelativePanel>




                    </RelativePanel>


                    <!-- Add/Modify Panel -->
                    <RelativePanel x:ConnectionId='30' x:Name="AddPanel" Grid.Column="1" Background="White" Margin="5,0,0,0"
                                   RelativePanel.AlignRightWithPanel="True"
                                       RelativePanel.AlignBottomWithPanel="True"
                                       RelativePanel.AlignTopWithPanel="True"
                                       RelativePanel.AlignLeftWithPanel="True"
                                   Visibility="Collapsed">


                        <StackPanel RelativePanel.AlignTopWithPanel="True"  Margin="40,40,40,20"
                                    RelativePanel.AlignRightWithPanel="True"
                                    RelativePanel.AlignLeftWithPanel="True"
                                    RelativePanel.Above="PanelAddButtons">

                            <!-- Title -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Style="{StaticResource 20Blue}" Margin="0,0,20,0">
                                *Title:</TextBlock>
                                <ComboBox x:ConnectionId='67' x:Name="CmbTitle"                                  
                                          Style="{StaticResource ComboBoxTemplate}"/>

                            </StackPanel>

                            <!-- Name and Surname -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Vertical" Grid.Column="0">
                                    <TextBlock Style="{StaticResource 20Blue}"
                                           Margin="0,0,0,10">*Name:</TextBlock>
                                    <TextBox x:ConnectionId='66' Name="TxtPatientName" Margin="0,0,5,0"
                                         Style="{StaticResource TextBoxTemplate}"/>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" Grid.Column="1">
                                    <TextBlock Style="{StaticResource 20Blue}"
                                           Margin="5,0,0,10">*Surname:</TextBlock>
                                    <TextBox x:ConnectionId='65' Name="TxtPatientSurname" Margin="5,0,0,0"
                                         Style="{StaticResource TextBoxTemplate}"/>
                                </StackPanel>

                            </Grid>

                            <!-- Date of birth -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Style="{StaticResource 20Blue}"
                                       Margin="0,0,20,0">*Date of Birth:</TextBlock>
                                <CalendarDatePicker x:ConnectionId='64' x:Name="DpPatientDOB" Style="{StaticResource DatePickerTemplate}"
                                                    DateFormat="{}{day.integer} {month.full} {year.full}">
                                </CalendarDatePicker>
                            </StackPanel>

                            <RelativePanel Margin="0,0,0,10">

                                <StackPanel x:ConnectionId='59' x:Name="PanelSex" Orientation="Vertical">
                                    <TextBlock Style="{StaticResource 20Blue}"
                                       Margin="0,0,0,10">*Patient Sex:</TextBlock>
                                    <RelativePanel>
                                        <TextBlock x:ConnectionId='61' Name="TxtPatientSex"></TextBlock>
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton x:ConnectionId='62'  x:Name="RadioSexM" Content="Male" MinWidth="80"
                                                          GroupName="RGrpSex" 
                                                          Style="{StaticResource RadioButtonTemplateGray}"/>
                                            <RadioButton x:ConnectionId='63'  x:Name="RadioSexF" Content="Female" MinWidth="80"
                                                          GroupName="RGrpSex"
                                                          Style="{StaticResource RadioButtonTemplateGray}"/>
                                        </StackPanel>
                                    </RelativePanel>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" RelativePanel.RightOf="PanelSex"
                                        Margin="40,0,0,0" RelativePanel.AlignRightWithPanel="True">
                                    <TextBlock Style="{StaticResource 20Blue}">*Contact:</TextBlock>
                                    <TextBox x:ConnectionId='60' Name="TxtPatientContact" Style="{StaticResource TextBoxTemplate}"></TextBox>
                                </StackPanel>

                            </RelativePanel>

                            <TextBlock Style="{StaticResource 20Blue}" Margin="0,0,0,10">*Address:</TextBlock>
                            <TextBox x:ConnectionId='56' Name="TxtPatientAddress" Style="{StaticResource TextBoxTemplate}"
                                  Margin="0,0,0,10"></TextBox>

                            <TextBlock Style="{StaticResource 20Blue}" Margin="0,0,0,10">*Email:</TextBlock>
                            <TextBox x:ConnectionId='57' Name="TxtPatientEmail" Style="{StaticResource TextBoxTemplate}"
                                     Margin="0,0,0,10"></TextBox>

                            <TextBlock Style="{StaticResource 20Blue}" Margin="0,0,0,10">*Patient Occupation:</TextBlock>
                            <TextBox x:ConnectionId='58' Name="TxtPatientOccupation" Style="{StaticResource TextBoxTemplate}"
                                     Margin="0,0,0,20"></TextBox>

                        </StackPanel>

                        <StackPanel x:ConnectionId='49' x:Name="PanelAddButtons" Orientation="Horizontal"
                                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                              RelativePanel.AlignBottomWithPanel="True"
                              Margin="0,20">

                            <Button x:ConnectionId='53' Name="BtnAdd"                      Padding="30,10" FontSize="18"
                                Template="{StaticResource BlueButtonTemplate}">
                                <SymbolIcon Symbol="Accept"/>
                            </Button>

                            <Button x:ConnectionId='54' Name="BtnModifyPatient"                               
                                Padding="30,10" FontSize="18"
                                Template="{StaticResource BlueButtonTemplate}">
                                <SymbolIcon Symbol="Accept"/>
                            </Button>

                            <Button x:ConnectionId='55' Name="BtnAddModifyCancel"                                   Padding="30,10" FontSize="18"
                                Template="{StaticResource GrayButtonTemplate}">
                                <SymbolIcon Symbol="Cancel"/>
                            </Button>

                        </StackPanel>

                        <!-- ERROR -->
                        <RelativePanel x:ConnectionId='50' x:Name="PanelError" Background="Gray"
                               Visibility="Collapsed" Margin="10"
                               RelativePanel.AlignTopWithPanel="True"
                               RelativePanel.AlignLeftWithPanel="True"
                               RelativePanel.AlignRightWithPanel="True">

                            <TextBlock x:ConnectionId='51' x:Name="TxtErrorMessage" Margin="20,15,20,15" Style="{StaticResource 16White}"
                               TextWrapping="WrapWholeWords">Error</TextBlock>

                            <Button x:ConnectionId='52' x:Name="BtnErrorClose" Template="{StaticResource WhiteTextBtn}"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"
                            Padding="5"                            >
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" FontSize="15"
                                   FontWeight="Bold"/>
                            </Button>

                        </RelativePanel>
                    </RelativePanel>

                    <!-- No Selection Panel -->
                    <RelativePanel x:ConnectionId='31' x:Name="NoSelectionPanel" Grid.Column="1" 
                                   Background="White" Margin="5,0,0,0"
                                   RelativePanel.AlignRightWithPanel="True" Visibility="Collapsed"
                                       RelativePanel.AlignBottomWithPanel="True"
                                       RelativePanel.AlignTopWithPanel="True"
                                       RelativePanel.AlignLeftWithPanel="True">

                        <TextBlock x:ConnectionId='48' x:Name="TxtNoSelection" RelativePanel.AlignVerticalCenterWithPanel="True"
                                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                           Grid.Column="1" Style="{StaticResource 28LightGray}">
                    Select a patient to view</TextBlock>

                    </RelativePanel>

                    <!-- Visit List Panel -->
                    <RelativePanel x:ConnectionId='32' x:Name="VisitListPanel" Grid.Column="1" 
                                   Background="White" Margin="5,0,0,0"
                                   RelativePanel.AlignRightWithPanel="True" Visibility="Collapsed"
                                       RelativePanel.AlignBottomWithPanel="True"
                                       RelativePanel.AlignTopWithPanel="True"
                                       RelativePanel.AlignLeftWithPanel="True">

                        <Button x:ConnectionId='41' x:Name="BtnCloseVisitList" Template="{StaticResource WhiteButtonTemplate}"
                                RelativePanel.AlignRightWithPanel="True"
                                RelativePanel.AlignTopWithPanel="True"
                                Margin="10"                                >
                            <SymbolIcon Symbol="Cancel"/>
                        </Button>

                        <TextBlock x:ConnectionId='42' x:Name="TxtSelectionLabel" Text="Select a visit to view details."
                                   RelativePanel.AlignTopWithPanel="True"
                                   RelativePanel.AlignHorizontalCenterWithPanel="True"
                                   Style="{StaticResource 16LightGray}" Margin="0,20,0,15"/>

                        <ListView x:ConnectionId='43' x:Name="ListViewVisits" 
                                  RelativePanel.AlignBottomWithPanel="True"
                                  RelativePanel.AlignLeftWithPanel="True"
                                  RelativePanel.AlignRightWithPanel="True"
                                  RelativePanel.Below="TxtSelectionLabel"
                                  IsItemClickEnabled="True"
                                                                      
                                                                       
                                  VerticalAlignment="Stretch">

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="BorderBrush" Value="LightGray"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Margin" Value="2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ListViewItemPresenter
                                                    SelectedPointerOverBackground="LightBlue"
                                                    PointerOverBackground="LightBlue"
                                                    PressedBackground="LightBlue"
                                                    SelectedBackground="LightBlue" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate                               >
                                    <RelativePanel x:ConnectionId='44'>

                                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0"
                                                    RelativePanel.AlignVerticalCenterWithPanel="True"
                                                    RelativePanel.AlignLeftWithPanel="True">
                                            <TextBlock x:Name="LblListDate" Text="Date: "
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   Style="{StaticResource 18DarkGray}"/>

                                            <TextBlock x:ConnectionId='47' x:Name="TxtListDate"                     
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   Margin="5,0,0,0"
                                                   Style="{StaticResource 18Blue}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                    RelativePanel.AlignVerticalCenterWithPanel="True"
                                                    RelativePanel.AlignHorizontalCenterWithPanel="True">
                                            <TextBlock x:Name="LblListTime" Text="Time: " Margin="20,0,0,0"
                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                   Style="{StaticResource 18DarkGray}"/>
                                            <TextBlock x:ConnectionId='46'                      Margin="5,0,0,0"
                                                       Style="{StaticResource 18Blue}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,20,0"
                                                    RelativePanel.AlignRightWithPanel="True"
                                                    RelativePanel.AlignVerticalCenterWithPanel="True">

                                            <TextBlock x:ConnectionId='45'                    Margin="5,0,0,0"
                                                       Style="{StaticResource 14Gray}"/>
                                        </StackPanel>

                                    </RelativePanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>

                    </RelativePanel>


                    <!-- OVERLAY -->
                    <RelativePanel x:ConnectionId='33' x:Name="Overlay" Background="#AAFFFFFF" Grid.ColumnSpan="2"
                                   Visibility="Collapsed"/>

                    <!-- DIALOG -->
                    <RelativePanel x:ConnectionId='34' x:Name="PanelDialog" Background="LightGray" Grid.Column="1"
                                           BorderBrush="{StaticResource AppBlueDarker}"
                                           BorderThickness="1"
                               Visibility="Collapsed" Margin="10"
                               RelativePanel.AlignTopWithPanel="True"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                           Width="400" MaxWidth="500"
                                   Height="150" MaxHeight="200">

                        <TextBlock x:ConnectionId='39' x:Name="TxtDialogMessage" Margin="20,15,20,15"
                                   RelativePanel.AlignTopWithPanel="True"
                                           Style="{StaticResource 16DarkGray}"
                               TextWrapping="WrapWholeWords">Message</TextBlock>

                        <Button x:ConnectionId='40' x:Name="BtnDialogOK" Margin="15"
                                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                                        RelativePanel.AlignBottomWithPanel="True" Padding="30,10" 
                                Template="{StaticResource BlueButtonTemplate}"
                                                                 >
                            OK</Button>

                    </RelativePanel>

                    <!-- DIALOG 2 -->
                    <RelativePanel x:ConnectionId='35' x:Name="PanelDialog2" Background="LightGray" Grid.Column="1"
                                           BorderBrush="{StaticResource AppBlueDarker}"
                                           BorderThickness="1"
                               Visibility="Collapsed" Margin="10"
                               RelativePanel.AlignTopWithPanel="True"
                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                           Width="400" MaxWidth="500"
                                   Height="150" MaxHeight="200">

                        <TextBlock x:ConnectionId='36' x:Name="TxtDialogMessage2" Margin="20,15,20,15"
                                   RelativePanel.AlignTopWithPanel="True"
                                           Style="{StaticResource 16DarkGray}"
                               TextWrapping="WrapWholeWords">Message</TextBlock>

                        <StackPanel RelativePanel.AlignHorizontalCenterWithPanel="True"
                                        RelativePanel.AlignBottomWithPanel="True" 
                                    Orientation="Horizontal">

                            <Button x:ConnectionId='37' x:Name="BtnDialogOK2" Margin="15"
                                        Padding="30,10" 
                                Template="{StaticResource BlueButtonTemplate}"
                                                                  >
                                Yes
                            </Button>

                            <Button x:ConnectionId='38' x:Name="BtnDialogCancel2" Margin="15"
                                        Padding="30,10" 
                                Template="{StaticResource GrayButtonTemplate}"
                                                                      >
                                No
                            </Button>

                        </StackPanel>



                    </RelativePanel>

                </Grid>

            </RelativePanel>
        </SplitView.Content>
    </SplitView>

</Page>

